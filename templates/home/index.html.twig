{% extends 'base.html.twig' %}

{% block title %}Welcome on DataP !{% endblock %}

{% block body %}
<div class="container vh-100 mt-5 text-center">
    <h3 class="mb-4">Welcome {{ app.user.username }} !</h3>
    <p class="">A summary of your informations :</p>
    <p>
        <br>
        <i class="fas fa-signature fa-2x"></i>
        <br>
        {{ app.user.lastname | upper }} {{ app.user.username }}
    </p>
    <p>
        <br>
        <i class="fas fa-birthday-cake fa-2x"></i>
        <br>
        {{ app.user.birthdate | date('m/d/Y') }}
    </p>
    <p>
        <br>
        <i class="fas fa-envelope fa-2x"></i>
        <br>
        {{ app.user.email }}
    </p>
    {% for address in app.user.addresses if app.user.addresses is not null %}
        <i class="fas fa-address-book fa-2x"></i> {{ address.name }}
    {% endfor %}
    {% if app.user.avatar is not null %}
    <div style="height: 100px" class="mt-3">
        <img src="/uploads/avatars/{{ app.user.avatar }}" alt="Profile picture" class="img-thumbnail">
    </div>
    {% endif %}
</div>
{% endblock %}