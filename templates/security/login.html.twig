{% extends 'base.html.twig' %}

{% block title %}Welcome on DataP !{% endblock %}

{% block body %}
    <div class="container text-center login mt-5 pt-5 pb-4 mb-5">
        <h2 class="pb-5"><span class="underline">Login</span> :</h2>
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <input placeholder="Email.." required name="_username" type="text" class="form-control">
            </div>
            <div class="form-group">
                <input placeholder="Password.." required name="_password" type="password" class="form-control">
            </div>
            <div class="form-group mt-4 mb-5">
                <button type="submit" class="btn btn-outline-primary">Login !</button>
            </div>
        </form>
        <div>
            <p>
                <a>Password forgot ?</a>
                <br>
                <a href="{{ path('register') }}">Not register yet ?</a>
            </p>
        </div>
    </div>
{% endblock %}
